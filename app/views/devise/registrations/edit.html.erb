<div class="container row justify-content-center shadow rounded bg-white">
  <div class="col-6 mt-3">
    <h1><%= t('.title', resource: resource_name.to_s.humanize) %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= bootstrap_devise_error_messages! %>

      <div class="row">
        <div class="col-6 form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, autofocus: true, placeholder: 'First name', class: 'form-control' %>
        </div>

        <div class="col-6 form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, placeholder: 'Last name', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>

        <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>

        <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
      </div>

      <div class="form-group text-center">
        <%= f.submit t('.update'), class: 'btn btn-sm btn-primary' %>
        <%= link_to t('.back'), :back, class: "btn btn-sm btn-secondary" %>
      </div>
    <% end %>

    <p class="text-center"><%= t('.unhappy') %>? <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %>.</p>
  </div>
</div>