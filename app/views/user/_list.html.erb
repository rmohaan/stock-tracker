  <% if user_signed_in? %>
    <div class=" row col-12 mt-3 ml-2">
      <h4> Your friends </h4>
      <% if current_user.friends.count > 0 %>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">Full Name</th>
              <th scope="col">Email</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% current_user.friends.each do |friend| %>
              <tr>
                <td><%= friend.full_name %></td>
                <td><%= friend.email %></td>
                <td> 
                  <%= link_to "Remove Friend", remove_friend_path(friend.id), data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-warning", method: :delete %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="w-100"></div>
        <p> You don't have any friends at this moment </p>
      <% end %>
    </div>
  <% end%>