<div class="container row bg-white shadow rounded">
  <%= form_tag search_friends_path, class: "col-12 justify-content-center align-items-center", remote: true, method: :post do  %>
    <div class="mt-3">
      <h3 class="ml-2">  Search users </h3>
    </div>
    <div class="w-100"></div>
    <div class="form-group form-row ml-2" >
      <div class="col-9 justify-content-center pr-0"> 
        <%=  text_field_tag :user, params[:user], placeholder: "Search user by email or name", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-2 pl-0 ml-1">
        <%= button_tag type: :submit, class: "btn btn-primary" do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="row col-12" id="results">
  </div>

  <%= render 'list' %>
</div>